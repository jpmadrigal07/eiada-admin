<% include ../../partials/profile/header %>
<% include ../../partials/profile/navbar %>
<% include ../../partials/profile/sidebar %>

<div class="dashboard-ecommerce">
    <div class="container-fluid dashboard-content ">
        <!-- ============================================================== -->
        <!-- pageheader  -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title"><%= pageSubName %> </h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/profile/patient/lists" class="breadcrumb-link"><%= pageName %></a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%= pageSubName %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader  -->
        <!-- ============================================================== -->
        <div class="ecommerce-widget">
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <div class="card">
                            <div class="card-body">
                                <div id="booking-history-list">
                                    <% if(familyMembers.length > 0) { %>
                                    <h3>Patient: <strong><%= familyMembers[0].patientID.firstName %> <%= familyMembers[0].patientID.middleName.charAt(0) %>. <%= familyMembers[0].patientID.lastName %></strong></h3>
                                    <% } %>
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Gender</th>
                                                <th scope="col">Date of Birth</th>
                                                <th scope="col">Relation</th>
                                                <th scope="col">Date Created</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% var counter = 0; %>
                                            <% familyMembers.forEach(function(familyMembers) { %>
                                            <% counter++; %>
                                            <tr>
                                                <th scope="row"><%= counter %></th>
                                                <td><%= familyMembers.firstName %> <%= familyMembers.middleName.charAt(0) %>. <%= familyMembers.lastName %></td>
                                                <td><%= familyMembers.gender %></td>
                                                <td><%= moment(familyMembers.birthDate).format( 'MMM DD, YYYY') %></td>
                                                <td><%= familyMembers.relation %></td>
                                                <td><%= moment(familyMembers.createdAt).format( 'MMM DD, YYYY hh:mm A') %></td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<% include ../../partials/profile/topFooter %>
<% include ../../partials/profile/middleFooter %>

<script>
    $(function () {
        $('#datetimepicker').datetimepicker({
            format: 'L'
        });
    });

</script>

<% include ../../partials/profile/bottomFooter %>